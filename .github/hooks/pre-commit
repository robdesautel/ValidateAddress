$path = "appsettings.json"

if(Test-Path $path){
	$content = Get-Content $path -Raw | ConvertFrom-Json

	if($content.Here.ApiKey -and $content.Here.ApiKey -ne ""){
		$content.Here.ApiKey = ""
		$content | ConvertTo-Json -Depth 10 | Set-Content $path
		Write-Host "Sanitized API key from $path before commit."
	}
}